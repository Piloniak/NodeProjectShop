<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Sklep</title>
</head>
<body style="background-image: url(/background/Green_bg.jpg);">
    <header>
        <%- include('./../partials/header.ejs') %>
    </header>
    <script>
        const add = (idx, amount) => {
          let element = document.getElementById(idx);
          let value = element.innerHTML;
          let productAmount = parseInt(amount)
          if(value < productAmount){
            ++value;
          }
          document.getElementById(idx).innerHTML = value;
        };
        const substract = (idx) => {
          let element = document.getElementById(idx);
          let value = element.innerHTML;
          if (value > 0) {
            --value;
          }
          document.getElementById(idx).innerHTML = value;
        };
      </script>
    <div>
        <%basket.forEach((elem,idx)=>{%>
            <div class="card" style="width: 30%; margin: 2%;">
                <h3 class="card-title"><%=elem.name%></h3>
                <div style="display: flex; flex-direction: row; margin: 2%;">
                    <button onclick="substract('<%=idx %>')" class="btn btn-secondary" style="margin: 3%;" >-</button>
                    <p id="<%=idx%>" style="margin: 3%;">1</p>
                    <button onclick="add('<%=idx %>', '<%=elem.amount %>')" class="btn btn-secondary" style="margin: 3%;">+</button>
                </div>
            </div>
        <%})%>
    </div>
    <button class="btn btn-primary" style="margin: 3%;"><a href="/choice" style="text-decoration: none; color: white; ">Dokonaj zakupu </a></button>
</body>
</html>